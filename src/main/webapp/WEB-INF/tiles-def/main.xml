<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<!-- 설정 파일을 중심으로 상단, 하단 같이 반복되는 페이지를 include -->
<tiles-definitions>
	<!-- name : Controller Return Value
	     Main 페이지는 데이터 작업 없이 View 호출을 하기 때문에 servlet-context.xml에서 <view-controller>태그의 view-name값 참조-->
	<!-- 실제 실행될 페이지 : layout 페이지에 의해 하단 속성 태그를 통해 header와 footer, menu가 조합된다. -->
	<definition name="main" template="/WEB-INF/views/template/layout.jsp">
		<put-attribute name="title" value="Dalbodre Coffee"/>
		<put-attribute name="header" value="/WEB-INF/views/template/header.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/main/main.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/template/footer.jsp"/>
	</definition>
	
</tiles-definitions>
